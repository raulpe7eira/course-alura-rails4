<tr>
  <td><%= product.name %></td>
  <td><%= product.description %></td>
  <td><%= product.price %></td>
  <td><%= product.amount %></td>
  <td>
    <%= link_to 'Alterar', edit_product_path(product), class: 'btn btn-default' %>
    <%= button_to 'Remover', product, method: :delete, data: { confirm: "Tem certeza que deseja remover #{product.name}?" }, class: 'btn btn-danger' %>
  </td>
</tr>
